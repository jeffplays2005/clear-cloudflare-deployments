{
  "languages": {
    "TypeScript": {
      "format_on_save": "on",
      "formatter": [
        { "language_server": { "name": "biome" } },
        { "code_action": "source.organizeImports.biome" },
        { "code_action": "source.fixAll.biome" }
      ]
    },
    "Markdown": {
      "format_on_save": "on",
      "formatter": [
        { "language_server": { "name": "biome" } },
        { "code_action": "source.organizeImports.biome" },
        { "code_action": "source.fixAll.biome" }
      ]
    }
  },
  // cspell:disable-next-line
  "language_servers": [
    "...",
    "!typescript-language-server",
    "!eslint",
    "!tailwindcss-language-server"
  ],
  "formatter": {
    "language_server": {
      "name": "biome"
    }
  },
  "lsp": {
    "biome": {
      "settings": {
        "require_config_file": true
      }
    }
  }
}
